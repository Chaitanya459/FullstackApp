{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES6",
    "moduleResolution": "node",
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "@types",
    "test"
  ]
}
